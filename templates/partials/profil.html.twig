<div class="profil">
     <div class="profile-card">
          <div class="profile-content">
               {% if  user.image %}
                   <img src="/image/{{user.image}}" alt="" class="profile-pic">
               {% else %}
                   <img src="/image/users/default.jpg" alt="" class="profile-pic" style="border:1px solid green">
               {% endif %}
               <h2>{{user.username}}</h2>
               <p>{{ "ADMIN" in user.roles | join('') | upper ? 'Administrateur' : 'Utilisateur'}}</p>
               <div class="profile-stats">
                   <div>
                       <span>Téléphone</span>
                       {# <p>(+261) {{user.telephone}}</p> #}
                   </div>
                   <div>
                       <span>Email</span>
                       <p>{{ user.email }}</p>
                   </div>
                   <div>
                       <span>Facebook</span>
                       <p>Tendry RKT</p>
                   </div>
               </div>
               {% if app.user.id == user.id %}
                   <a href="" class="show-more">Editer</a>
               {% endif %}
          </div>
     </div>
</div>