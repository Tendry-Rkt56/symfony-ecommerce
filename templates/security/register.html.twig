{% extends "user.html.twig" %}
{% block title %} Régistration {% endblock %}
{% block body %}

     <div class="container-fluid d-flex align-items-center justify-content-center flex-column gap-2">
          {{form_start(form)}}
               <h2 class="mb-4 align-self-start">Création de <span style="border-bottom:3px solid orangered;">com</span>pte</h2>
               <div class="row">
                    <div class="col-sm">
                         {{form_row(form.username)}}
                    </div>
                    <div class="col-sm">
                         {{form_row(form.email)}}
                    </div>
               </div>
               <div class="row">
                    <div class="col-sm">
                         {{form_row(form.password)}}
                    </div>
                    <div class="col-sm">
                         {{form_row(form.image)}}
                    </div>
               </div>
          {{form_end(form)}}
     </div>


{% endblock %}